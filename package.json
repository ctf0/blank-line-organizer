{
    "name": "blank-line-organizer",
    "displayName": "Blank Line Organizer",
    "description": "Removes unnecessary blank lines and adds if needed",
    "version": "0.0.9",
    "publisher": "ctf0",
    "icon": "images/icon.png",
    "engines": {
        "vscode": "^1.41.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "Empty Line",
        "Blank Line",
        "New Line",
        "Formatter",
        "Remover"
    ],
    "repository": "https://github.com/ctf0/blank-line-organizer",
    "activationEvents": [
        "onCommand:blankLine.process"
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "blankLine.process",
                "title": "Remove Blank Lines"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "blankLine.process",
                    "when": "editorIsOpen",
                    "group": "1_modification"
                }
            ],
            "commandPalette": [
                {
                    "command": "blankLine.process",
                    "when": "editorIsOpen"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "blankLine",
            "properties": {
                "blankLine.keepOneEmptyLine": {
                    "type": "boolean",
                    "default": true,
                    "description": "If set to true removes all consecutive blank lines, except one."
                },
                "blankLine.languageIds": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "javascript",
                        "javascriptreact",
                        "typescript",
                        "typescriptreact",
                        "json",
                        "css",
                        "scss"
                    ],
                    "uniqueItems": true,
                    "description": "List of languages to be processed"
                }
            }
        }
    },
    "scripts": {
        "test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.3",
        "@types/node": "^14.6.0",
        "@types/vscode": "^1.48.0",
        "eslint": "^7.7.0",
        "glob": "^7.1.6",
        "mocha": "^8.1.2",
        "typescript": "^4.0.2",
        "vscode-test": "^1.4.0"
    }
}
